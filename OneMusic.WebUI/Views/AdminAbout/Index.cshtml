@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>Hakkımızda</h3>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
      
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a class="btn btn-outline-danger" asp-action="DeleteAbout" asp-route-id="@item.AboutID"> Sil</a>

                <a class="btn btn-outline-info" asp-action="UpdateAbout" asp-route-id="@item.AboutID"> Güncelle</a>
            </td> 
            

        </tr>
    }

</table>

<a class="btn btn-outline-primary" asp-action="CreateAbout" > Yeni Hakkımızda Alanı Oluştur</a>

