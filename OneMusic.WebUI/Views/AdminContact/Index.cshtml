@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>İletişim Bilgileri</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Adres</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>Harita Url</th>
        <th>İşlemler</th>
      
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.MapUrl</td>
            <td>
                <a class="btn btn-outline-danger" asp-action="DeleteContact" asp-route-id="@item.ContactID">Sil</a>
                <a class="btn btn-outline-primary" asp-action="UpdateContact" asp-route-id="@item.ContactID">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-outline-info" asp-action="CreateContact" >Yeni İletişim Bilgileri Ekle</a>

