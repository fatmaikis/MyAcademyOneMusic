@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>Mesajlar Sayfası</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Mail</th>
        <th>Konu</th>
        <th>İçerik</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Content</td>
            <td>
                <a class="btn btn-outline-danger" asp-action="DeleteMessage" asp-route-id="@item.MessageID">Sil </a>
                <a class="btn btn-outline-info" asp-action="UpdateMessage" asp-route-id="@item.MessageID">Güncelle </a>
            </td>
        </tr>
    }
</table>
<br />
<a class="btn btn-outline-primary" asp-action="CreateMessage">Yeni Mesaj Ekle </a>

